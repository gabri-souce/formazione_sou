Vagrant.configure("2") do |config|
  config.vm.box = "rockylinux/9"
  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.define "jenkins" do |jenkins|
    jenkins.vm.hostname = "jenkins"
    jenkins.vm.network "private_network", ip: "192.168.56.10"

    jenkins.vm.provider "virtualbox" do |vb|
      vb.memory = 2048
      vb.cpus = 2
    end

    # Provisioner base setup
    jenkins.vm.provision "ansible" do |ansible|
      ansible.playbook = "ansible/playbook-setup.yml"
      ansible.inventory_path = "ansible/inventory.ini"
    end

    # Provisioner API setup (curl)
    jenkins.vm.provision "api-setup", type: "ansible" do |ansible|
      ansible.playbook = "ansible/playbook-api.yml"
      ansible.inventory_path = "ansible/inventory.ini"
    end

    # Provisioner API setup (uri)
    jenkins.vm.provision "api-uri", type: "ansible" do |ansible|
      ansible.playbook = "ansible/playbook-api-uri.yml"
      ansible.inventory_path = "ansible/inventory.ini"
    end
  end
end
